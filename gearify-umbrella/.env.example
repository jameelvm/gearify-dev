# LocalStack Pro
# Replace this with your actual LocalStack Pro API key from https://app.localstack.cloud/workspace/auth-tokens
LOCALSTACK_API_KEY=your-localstack-pro-api-key-here

# AWS Configuration (LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT=http://localstack:4566

# DynamoDB
DYNAMODB_ENDPOINT=http://localstack:4566
DYNAMODB_PRODUCTS_TABLE=gearify-products
DYNAMODB_ORDERS_TABLE=gearify-orders
DYNAMODB_TENANTS_TABLE=gearify-tenants
DYNAMODB_FEATURE_FLAGS_TABLE=gearify-feature-flags

# S3
S3_ENDPOINT=http://localstack:4566
S3_PRODUCT_IMAGES_BUCKET=gearify-product-images
S3_ASSETS_BUCKET=gearify-assets

# SQS/SNS
SQS_ENDPOINT=http://localstack:4566
SNS_ENDPOINT=http://localstack:4566
SQS_ORDER_EVENTS_QUEUE=gearify-order-events
SQS_PAYMENT_EVENTS_QUEUE=gearify-payment-events
SQS_NOTIFICATION_EVENTS_QUEUE=gearify-notification-events

# Secrets Manager
SECRETS_MANAGER_ENDPOINT=http://localstack:4566

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=gearify
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_CONNECTION_STRING=Host=postgres;Database=gearify;Username=postgres;Password=postgres

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Cognito (will be filled by localstack-init.sh after first run)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_ENDPOINT=http://localstack:4566

# JWT
JWT_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxxxxx
JWT_AUDIENCE=xxxxxxxxxxxxxxxxxxxxxxxxxx
JWT_SECRET=local-dev-secret-key-change-in-production

# Tenants
DEFAULT_TENANT_ID=default
DEMO_TENANT_ID=global-demo

# Payment Providers
STRIPE_API_KEY=sk_test_local_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_local
PAYPAL_CLIENT_ID=paypal_test_client
PAYPAL_CLIENT_SECRET=paypal_local_secret
PAYPAL_MODE=sandbox

# Email (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@gearify.local

# Observability
SEQ_URL=http://seq:5341
OTLP_ENDPOINT=http://otel-collector:4318
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_URL=http://prometheus:9090

# Service URLs (Internal)
TENANT_SERVICE_URL=http://tenant-svc:80
CATALOG_SERVICE_URL=http://catalog-svc:80
SEARCH_SERVICE_URL=http://search-svc:80
CART_SERVICE_URL=http://cart-svc:80
ORDER_SERVICE_URL=http://order-svc:80
PAYMENT_SERVICE_URL=http://payment-svc:80
SHIPPING_SERVICE_URL=http://shipping-svc:80
INVENTORY_SERVICE_URL=http://inventory-svc:80
MEDIA_SERVICE_URL=http://media-svc:80
NOTIFICATION_SERVICE_URL=http://notification-svc:80
API_GATEWAY_URL=http://api-gateway:8080

# Frontend
FRONTEND_URL=http://localhost:4200
API_BASE_URL=http://localhost:8080
